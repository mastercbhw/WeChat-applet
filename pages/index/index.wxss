/**index.wxss**/
.top_city {
  text-align: center;
  color: #ffffff;
  background: #42c642;
  height: 100rpx;
  line-height: 100rpx;
}

.weather {
  flex: 1;
}
.today {
  color: #ffffff;
}

.today-top {  
  box-sizing: content-box;
  height: 520rpx;
  overflow: hidden;
  background: #42c642;
}

.today-weather {
  margin-top: 20rpx;
  font-size: 26rpx;
  line-height: 40rpx;
  display: flex;
  flex-direction: row;
}
.today-weather-img, .desc{
  flex: 1;
  width: 100rpx;
}
.pic {
  width: 80rpx;
  height: 80rpx;
}
.today-weather-img {
  text-align: right;
  margin-right: 20rpx; 
}

.desc {
  text-align: left;
  margin-left: 20rpx; 
}

.today-bottom {
  background: #faf9fa;
  width: 150%;
  height: 300rpx;
  border-radius: 150%;
  margin: -60rpx 0 0 0;
  margin-left:-25%;
}

.today-wendu {
  margin-top: 20rpx;
  font-size: 68rpx;
  text-align: center;
}
.today-PM {
  text-align: center;
  font-size: 28rpx;
  padding: 20rpx 0 100rpx 0;
}

.feature {
  margin-top: -100rpx;
}
.feature .day {
  margin: 20rpx;
  padding: 20rpx 30rpx;
  border-radius: 20rpx;
  background: #fff;
  color: #000000;

  display: flex;  
  flex-direction:row;
}
.feature .day .date{
   width: 80rpx;
   font-size: 28rpx;
   line-height: 60rpx;
   margin-right: 20rpx;
   padding-top: 5rpx;
}
.feature .day .pic{
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
}
.feature .day .desc{
  display: flex;
  flex-direction: column;
  margin-right: 20rpx;
  width: 100px;
}
.feature .day .desc text {
  font-size: 20rpx;
  line-height: 25rpx;
  margin-left: 20rpx;
  margin-top:5rpx;
  color:#404040;
}
.feature .day .temperature{
   font-size: 28rpx;
   line-height: 60rpx;
   margin-left: 80rpx;
   padding-top: 5rpx;
}
